{
	// Required
	"manifest_version": 2,
	"name": "WhatsBot",
	"version": "1.0",
	// Recommended
	"description": "Spamma messaggi su Whatsapp Web",
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	// Optional
	"author": "Gabriele Princiotta",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "WhatsBot",
		"default_popup": "popup.html"
	},
	"homepage_url": "http://gabriprinciott.altervista.org/whatsBot.php",
	"offline_enabled": false,
	"short_name": "WhatsBot",
	"content_scripts": [
		{
			"match_about_blank": true,
      		"all_frames": true,
		    "matches": ["*://web.whatsapp.com/*","https://fonts.googleapis.com/*","*://*.mozilla.org/*"],
		    "css": ["assets/css/sweetalert2.min.css","assets/css/input.css"],
		    "js": ["assets/js/jquery-3.4.1.min.js","assets/js/sweetalert2.all.min.js","assets/js/promise-polyfill.js","assets/js/whatsBot.js"]
		}
	],
	"web_accessible_resources": [
		"assets/css/sweetalert2.min.css",
		"assets/css/bootstrap.min.css"
	],
	"permissions": [
		"*://web.whatsapp.com/*",
		"https://fonts.googleapis.com/*",
		"tabs"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
