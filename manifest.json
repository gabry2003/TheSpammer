{
	"manifest_version": 2,
	"name": "The Spammer",
	"version": "1.0",
	"description": "Spamma messaggi su Whatsapp Web, Telegram Web e Google Meet",
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"author": "Gabriele Princiotta",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "The Spammer",
		"default_popup": "popup.html"
	},
	"homepage_url": "https://github.com/gabry2003/theSpammer",
	"offline_enabled": false,
	"short_name": "The Spammer",
	"content_scripts": [
		{
			"match_about_blank": true,
    	"all_frames": true,
	    "matches": ["<all_urls>"],
	    "css": ["assets/css/sweetalert2.min.css","assets/css/input.css","assets/css/customSweet.css"],
	    "js": ["assets/js/jquery-3.4.1.min.js","assets/js/sweetalert2.all.min.js","assets/js/promise-polyfill.js","assets/js/theSpammer.js"]
		}
	],
	"web_accessible_resources": [
		"assets/css/sweetalert2.min.css",
		"assets/css/bootstrap.min.css",
		"assets/css/customSweet.css"
	],
	"permissions": [
		"*://*/*",
		"https://fonts.googleapis.com",
		"tabs",
    "notifications"
	],
	"content_security_policy": "script-src 'self' https://fonts.googleapis.com; object-src 'self'"
}
